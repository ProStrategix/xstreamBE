<section class="features" data-aos="fade-down" data-aos-delay="200" data-aos-duration="900">
        
        <div class="main-feature" >
            
            <div class="stepper-wrapper">
                <div class="stepper-item completed">
                  <div class="step-counter">1</div>
                  <div class="step-name" onclick="location.href='getstarted.html';">Sign In / Register</div>
                </div>
                <div class="stepper-item completed">
                  <div class="step-counter">2</div>
                  <div class="step-name" onclick="location.href='addservices.html';">Select Services</div>
                </div>
                <div class="stepper-item active">
                  <div class="step-counter">3</div>
                  <div class="step-name" onclick="location.href='payment-checkout.html';">Checkout</div>
                </div>
            </div>
           
            <div class="container">
                <!-- Receipt Section -->
                <div class="receipt-section">
                  <h2>Order Summary</h2>
                  <p>Please review your order details carefully. If something seems incorrect, <a href="/service">click here</a> to go back and make changes.</p>
                  {{#if orderDetails.found}}
                  <table class="receipt-table">
                    <thead>
                      <tr>
                        <th>Quantity</th>
                        <th>Service</th>
                        <th>Cost</th>
                      </tr>
                    </thead>
                    <tbody>
                      {{#each orderDetails.data}}
                      <tr>
                        <td>1</td>
                        <td>{{name}}</td>
                        <td>${{subtotal}}</td>
                      </tr>
                     {{/each}}
                    </tbody>
                    <tfoot>
                      <tr>
                        <td colspan="2">Total Services</td>
                        <td>${{orderDetails.total}}</td>
                      </tr>
                      <tr>
                        <td colspan="2">Taxes & Fees</td>
                        <td>${{orderDetails.tax}}</td>
                      </tr>
                      <tr class="total-row">
                        <td colspan="2">Grand Total</td>
                        <td>${{orderDetails.grandTotal}}</td>
                      </tr>
                    </tfoot>
                  </table>
                  {{else}}
                    <p>Cart is empty!!</p>
                  {{/if}}
                </div>
            
                <!-- Payment Section -->
                <div class="payment-section">
                  <h2>Payment Information</h2>
                   {{!-- <iframe id="paymentIframe" src="https://hpp-test.ippay.com" width="100%" height="600px" frameborder="0"></iframe> --}}
                  <form method="POST" action="/checkout/payment-process" >
                    <div class="form-group">
                      <label for="email">Email Address</label>
                      <input type="email" id="email" name="CustomerEmail" placeholder="example@mail.com" required>
                    </div>
                    <div class="form-group">
                      <label for="name">Full Name</label>
                      <input type="text" id="name" name="Name" placeholder="John Doe" required>
                    </div>
                   
                    
                    <button type="submit" class="btn">Pay Now</button>
                  </form>
                </div>
              </div>
            
    
        </div>
        
        
    </section>